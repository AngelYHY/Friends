<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="freestar.friends">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 获取机型信息权限 -->

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- 必选： SDK 核心功能 -->
    <service
        android:name="io.rong.push.core.PushRegistrationService"
        android:exported="false" />
    <service
        android:name="io.rong.push.PushService"
        android:exported="false"
        android:process="io.rong.push" />
    <service
        android:name="io.rong.push.core.MessageHandleService"
        android:exported="true" />

    <!-- 必选： SDK 核心功能 -->
    <service
        android:name="io.rong.push.core.PushRegistrationService"
        android:exported="false" />
    <service
        android:name="io.rong.push.PushService"
        android:exported="false"
        android:process="io.rong.push" />
    <service
        android:name="io.rong.push.core.MessageHandleService"
        android:exported="true" />

    <receiver
        android:name="io.rong.push.PushReceiver"
        android:process="io.rong.push">
        <intent-filter>
            <action android:name="io.rong.push.intent.action.HEART_BEAT" />
        </intent-filter>
        <intent-filter>
            <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
        </intent-filter>
        <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
        </intent-filter>
        <intent-filter>
            <action android:name="android.intent.action.USER_PRESENT" />
            <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
        </intent-filter>
    </receiver>

    <!-- 必选： SDK 核心功能 -->

    <service
        android:name="io.rong.imlib.ipc.RongService"
        android:exported="true"
        android:process=":ipc" />
    <service android:name="io.rong.imlib.ReConnectService" />

    <receiver android:name="io.rong.imlib.ConnectChangeReceiver" />
    <receiver
        android:name="io.rong.imlib.HeartbeatReceiver"
        android:process=":ipc" />

    <!-- 上面的是要加进去的权限 -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/camera"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme">
        >
        <activity android:name=".util.profile.ConcernActivity" />
        <activity android:name=".util.profile.SearchActivity" />
        <activity android:name=".util.takephoto.app.TakePhotoActivity" />
        <activity android:name=".activities.CommentActivity" />
        <activity android:name=".activities.PhotoPickerActivity" />
        <activity android:name=".activities.PublishPicture" />
        <activity android:name=".activities.DyFabuActivity" />
        <activity
            android:name=".activities.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Translucent" />
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity
            android:name=".activities.LoginA"
            android:theme="@style/LoginTheme" />

        <!-- 会话列表的固定写法  需加在的当前activity上 -->
        <activity
            android:name=".activities.HomePageA"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="freestar.friends"
                    android:pathPrefix="/conversationlist"
                    android:scheme="rong" />
            </intent-filter>
        </activity>

        <!-- 融云聊天会话界面的固定写法 -->
        <activity android:name=".activities.ConversationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="freestar.friends"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>

        <!-- 融云聊天的账号 -->
        <meta-data
            android:name="RONG_CLOUD_APP_KEY"
            android:value="y745wfm84408v" />

        <activity android:name=".util.profile.NinameActivity" />
        <activity android:name=".util.profile.MyinfoActivity" />
        <activity android:name=".activities.MyIconActivity" />
        <activity android:name=".util.profile.KingActivity" />
        <activity android:name=".util.profile.AnqActivity" />
        <activity android:name=".util.profile.PersSignActivity" />
        <activity android:name=".activities.UserDataActivity" />
        <activity android:name=".activities.QurryFriendIdActivity" />
        <activity android:name=".activities.PicItemActivity" />
        <activity android:name=".util.profile.ContactActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity
            android:name=".activities.DiscussActivity"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity android:name=".util.profile.MyFriendActivity" />
        <activity android:name=".util.profile.TypeActivity" />
        <activity android:name=".util.profile.CollectActivity" />
        <activity android:name=".util.profile.SetupActivity" />
        <activity android:name=".util.profile.HelpActivity" />
        <activity android:name=".util.profile.SetupMessage" />
        <activity android:name=".activities.PublishArticle" />
        <activity android:name=".activities.ArticleItemActivity" />
        <activity android:name=".util.profile.EmailActivity" />
        <activity android:name=".activities.SearchActivity1" />
        <activity android:name=".activities.ArticleItemActivity1" />
        <activity android:name=".activities.SearchActivity2" />
        <activity android:name=".util.profile.TaTypeActivity" />
        <activity android:name=".util.profile.TaCollectActivity" />
        <activity android:name=".activities.SearchActivity3" />
        <activity android:name=".util.profile.TaConcernActivity" />
        <activity android:name=".util.profile.ConcernActivity1" />
        <activity android:name=".util.profile.CollectActivity1" />
        <activity android:name=".util.profile.TypeActivity1" />
    </application>

</manifest>