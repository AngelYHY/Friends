<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView_tuji"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/Smile.TextView._Black"
        android:text="天气好呀 多云转晴"
        android:id="@+id/tv_title_tuji"
        android:layout_alignTop="@+id/imageView_tuji"
        android:layout_toEndOf="@+id/imageView_tuji"
        android:layout_marginStart="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-8-32"
        android:id="@+id/time_tuji"
        android:layout_alignBottom="@+id/imageView_tuji"
        android:layout_alignStart="@+id/tv_title_tuji" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/num_tuji"
        android:layout_alignBottom="@+id/time_tuji"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"/>


</RelativeLayout>